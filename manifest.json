
{
  "name": "Reasy",
  "version": "0.0.1",
  "description": "Reasy for Chrome",
  "background_page": "background.html",
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "contextMenus",
    "<all_urls>"
  ],
  "content_scripts" : [ {
      "matches": [ "<all_urls>", "file:///*/*" ],
      "css": [ "reasy.css" ],
      "js": [ "jquery-1.6.1.min.js", "reasy.js" ],
      "run_at": "document_end"
      } ],
  "icons": {
    "16": "icon48.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

